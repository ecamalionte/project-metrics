<%- model_class = Vote -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= @vote.value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:votable_id) %>:</strong></dt>
  <dd><%= @vote.votable_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:votable_type) %>:</strong></dt>
  <dd><%= @vote.votable_type %></dd>
</dl>

<%= render partial: 'modal_vote_form'%>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              build_path_votes, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              build_path_edit_vote(@vote), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              build_path_vote(@vote),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

</div>
