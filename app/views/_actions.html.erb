<%= link_to t('.comment', :default => t("helpers.links.comment")),
            build_path_comments_for(object), :class => 'btn btn-mini' %>

<%= link_to t('.vote', :default => t("helpers.links.vote")), '#',  onclick: "$.get('#{build_path_new_vote_for(object)}')", :class => 'btn btn-mini' %>

<% if can? :update, object %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              build_path_to_edit_for(object), :class => 'btn btn-mini' %>
<% end %>
<% if can? :destroy, object %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              build_path_to_destroy_for(object),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-mini btn-danger' %>
<% end %>
